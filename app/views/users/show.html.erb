<div class="show-page">

  <nav aria-label="You are here:" role="navigation">
    <ul class="breadcrumbs">
      <li><a href="/">Home</a></li>
      <li>
        <span class="show-for-sr">Current: </span> <%= @user.email %>
      </li>
    </ul>
  </nav>

  <h1>
    <% unless @user.icon_id.nil? %>
      <img class="champ-thumb" src="http://ddragon.leagueoflegends.com/cdn/7.2.1/img/profileicon/<%=@user.icon_id%>.png">
    <% end %>
    <%= @user.email %>
  </h1>

  <div class="tabs-content small-12 medium-8 large-6" data-tabs-content="user-tabs">

    <ul class="tabs" data-tabs id="user-tabs">
      <li class="tabs-title is-active"><a href="#topics-panel" aria-selected="true">Topics</a></li>
      <li class="tabs-title"><a href="#comments-panel">Comments</a></li>
      <li class="tabs-title"><a href="#matches-panel">Matches</a></li>
    </ul>

    <div class="tabs-panel is-active" id="topics-panel">
      <% if @user.topics.length > 0 %>
        <% @user.topics.each do |topic| %>
          <div class="topic">
            <a href="/champions/<%=topic.champion_id%>/topics/<%=topic.id%>"><img class="champ-thumb" height="50" width="50" src="http://ddragon.leagueoflegends.com/cdn/7.1.1/img/champion/<%= topic.champion.img %>"><%= topic.title %><a>
          </div>
        <% end %>
      <% else %>
        <p>You haven't posted any topics yet!</p>
      <% end %>
    </div>

    <div class="tabs-panel" id="comments-panel">
      <% if @user.replies.length > 0 %>
        <% @user.replies.each do |reply| %>
          <div class="reply">
            <a href="/champions/<%=reply.topic.champion.id%>/topics/<%=reply.topic.id%>"><img class="champ-thumb" height="50" width="50" src="http://ddragon.leagueoflegends.com/cdn/7.1.1/img/champion/<%= reply.topic.champion.img %>"><%= reply.topic.title %></a>
            <p><%= reply.content %></p>
          </div>
        <% end %>
        <% else %>
        <p>You haven't posted any comments yet!</p>
      <% end %>
    </div>

    <div class="tabs-panel" id="matches-panel">
      <% if @user.matches.exists? %>
        <%= button_to "Update Matches", new_user_match_path(@user), method: :get %>
        </br>
        <% @user.matches.sort{|a,b| b.date <=> a.date}.each do |match| %>
          <a class="card-container" href="<%= match.user.id %>/matches/<%= match.id %>" style="background-image: url(http://ddragon.leagueoflegends.com/cdn/7.2.1/img/champion/<%=match.champion%>.png)">
            <div class="card">
              <div class="card-divider">
                <% unless match.gamemode.humanize.chomp(" sr").chomp("5x5").length < 12 %>
                  <h6><%= match.gamemode.humanize.chomp(" sr").chomp("5x5") %></h6>
                <% else %>
                  </br>
                  <h6><%= match.gamemode.humanize.chomp(" sr").chomp("5x5") %></h6>
                <% end %>
              </div>
              <div class="card-section">
                </br>
                </br>
                <small><%= match.date %></small>
              </div>
            </div>
          </a>
        <% end %>
      <% elsif @user.riot_username == "" || @user.riot_username == nil %>
      <p>Please add your Riot username to your LeagueHQ account on the Edit Profile page to view your match history.</p>
      <% else %>
        <%= button_to "Get Matches", new_user_match_path(@user), method: :get %>
      <% end %>
    </div>


    </div>
  </div>
