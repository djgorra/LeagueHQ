<div class="show-page">
  <h1><%= @user.email %></h1>

  <div class="tabs-content small-12 medium-8 large-6" data-tabs-content="example-tabs">

    <ul class="tabs" data-tabs id="example-tabs">
      <li class="tabs-title is-active"><a href="#topics-panel" aria-selected="true">Topics</a></li>
      <li class="tabs-title"><a href="#comments-panel">Comments</a></li>
    </ul>

    <div class="tabs-panel is-active" id="topics-panel">
      <% @user.topics.each do |topic| %>
        <div class="topic">
          <a href="/champions/<%=topic.champion_id%>/topics/<%=topic.id%>"><%= topic.title %><a>
        </div>
      <% end %>
    </div>

    <div class="tabs-panel" id="comments-panel">
      <% @user.replies.each do |reply| %>
        <div class="reply">
          <a href="/champions/<%=reply.topic.champion.id%>/topics/<%=reply.topic.id%>"><%= reply.topic.title %></a>
          <p><%= reply.content %></p>
        </div>
      <% end %>
    </div>
    
  </div>
</div>
