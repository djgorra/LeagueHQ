<div class="show-page">
  <nav aria-label="You are here:" role="navigation">
    <ul class="breadcrumbs">
      <li><a href="/">Home</a></li>
      <li>
        <span class="show-for-sr">Current: </span> <%= @champion.name %>
      </li>
    </ul>
  </nav>
  <div class="header small-12 medium-10 large-6 large-offset-3">
    <h1><img class="champ-thumb" height="50" width="50" src="http://ddragon.leagueoflegends.com/cdn/7.1.1/img/champion/<%= @champion.img %>"> <strong><%= @champion.title %></strong></h1>
    <button class="topic-button button large drowpdown" type="button" data-toggle="topic-dropdown">New Topic</button>
    <div class="dropdown-pane" id="topic-dropdown" data-dropdown data-auto-focus="true">
      <% if user_signed_in? %>
        <%= render :partial => "topics/form" %>
      <% else %>
        <p>Must be signed in!</p>
        <%= render :partial => "devise/sessions/form" %>
      <% end %>
    </div>

    <ul class="topics small-11">
      <% if @champion.topics.length > 0 %>
        <% @champion.topics.each do |topic| %>
        <a href="/champions/<%=@champion.id%>/topics/<%=topic.id%>">
        <div class="topic">
          <h3><%= topic.title %></h3>
            <p>Submitted by <%= topic.user.riot_username %> at <%= topic.created_at %></p>
        </div>
        </a>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
