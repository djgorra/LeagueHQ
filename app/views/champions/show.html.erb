<div class="show-page">
  <nav aria-label="You are here:" role="navigation">
    <ul class="breadcrumbs">
      <li><a href="/">Home</a></li>
      <li>
        <span class="show-for-sr">Current: </span> <%= @champion.name %>
      </li>
    </ul>
  </nav>

  <h1><strong>Topics for <%= @champion.name %></strong></h1>

  <ul class="topics">
    <% if @champion.topics.length > 0 %>
      <% @champion.topics.each do |topic| %>
        <li><a href="/champions/<%=@champion.id%>/topics/<%=topic.id%>"><%= topic.title %></a></li>
          <small>Submitted by <%= topic.user.email %></small>
      <% end %>
    <% end %>
  </ul>
</div>
