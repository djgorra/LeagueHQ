<div class="row">
  <div class="user-form small-12 medium-6 large-4 small-centered columns">
  <h2>LeagueHQ Signup</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: :email %>
    </div>

    <div class="field">
      <%= f.text_field :riot_username, placeholder: :riot_username %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password (6 characters minimum)" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password" %>
    </div>

    <%= flash[:recaptcha_error] %>
    <%= recaptcha_tags site_key: ENV["RECAPTCHA_SITE_KEY"] %>
    <br>

    <div class="actions">
      <%= f.submit "Confirm" %>
    </div>
  <% end %>
  </div>
</div>
